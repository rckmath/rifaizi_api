{
  "compilerOptions": {
    "target": "es2019",
    "moduleResolution": "node",
    "module": "commonjs",
    "lib": ["es2019", "dom"],
    "types": ["reflect-metadata", "jest", "long"],
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "resolveJsonModule": true,
    "alwaysStrict": true,
    "removeComments": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "paths": {
      "@shared/*": ["./src/shared/*"],
      "@configs/*": ["./src/configs/*"],
      "@modules/*": ["./src/modules/*"],
      "@user/*": ["./src/modules/user/*"],
      "@utils/*": ["./src/shared/utils/*"],
      "@infra/*": ["./src/shared/infra/*"],
      "@raffle/*": ["src/modules/raffle/*"],
      "@http/*": ["./src/shared/infra/http/*"],
      "@dashboard/*": ["./src/modules/dashboard/*"],
      "@database/*": ["./src/shared/infra/database/*"],
      "@payment_option/*": ["./src/modules/payment_option/*"],
      "@raffle_option/*": ["./src/modules/raffle_option/*"],
    },
    "rootDirs": [
      "./src",
      "./test",
      "./prisma"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "./src/**/*.ts",
    "./test/**/*.ts"
  ],
  "exclude": [
    "./node_modules/*",
    "dist"
  ]
}
